{
    "name": "actb/laravel-validation-rules",
    "description": "A set of usefull Laravel validation rules",
    "type": "library",
    "keywords": ["Activisme_BE", "validation", "rules", "laravel"],
    "require": {
        "php": "^7.4",
        "illuminate/support": "^6.0|^7.0|^8.0",
        "illuminate/contracts": "^6.0|^7.0|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Tim Joosten",
            "email": "tim@activisme.be",
            "role": "developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "ActivismeBe\\ValidationRules\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ActivismeBe\\ValidationRules\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "ActivismeBe\\ValidationRules\\ValidationRuleServiceProvider"
            ]
        }
    }
}
